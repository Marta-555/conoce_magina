                <div class="gallery-image">
                  <a href="{{ galeria.imagen6 }}" title="{{ galeria.titulo6 }}">
                    <img src="{{ galeria.imagen6 }}" alt="{{ galeria.titulo6 }}"/>
                    <div class="gallery-caption">
                      <div class="gallery-icon"><span class="icon-magnifying-glass"></span></div>
                    </div>
